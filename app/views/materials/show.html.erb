<%- model_class = Material -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @material.title %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><div id="body" style="border:2px dashed gray"><%= raw @material.body %>&nbsp;</div></dd>
  <dt><strong>Adjuntos:</strong></dt>
  <% if @material.attachments.present? %>
    <% @material.attachments.each do |attachment| %>
      <dd><%= link_to attachment.attach_file_name, material_attachment_download_path(@material, :attachment_id => attachment.id, :id => @material.id), :style => 'text-decoration:underline' %></dd>
    <% end %>
  <% else %>
    <dd>Este material no tiene adjuntos</dd>
  <% end %>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              '/materials/my_materials', :class => 'btn'  %>
  <% if false %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_material_path(@material), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              material_path(@material),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
  <% end %>
</div>
