<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <span class='control-label'>Email</span>
    <div class="controls">
      <%= f.text_field :email, :type => 'email', :class => 'text_field', :maxlength => 100, :required => 'required' %>
    </div>
  </div>

  <div class="control-group">
    <span class='control-label'><%= t(:password) %></span>
    <div class="controls">
      <%= f.text_field :password, :class => 'text_field', :type => 'password', :maxlength => '12', :required => 'required' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :role, :class => 'control-label' %>
    <div class="controls">
      <%= select_tag :role, options_for_select(Settings.unroll(:roles, :roles)), :class => 'form-control' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :is_active, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :is_active, :class => 'check_box' %>
    </div>
  </div>

  <div class="control-group">
    <span class='control-label'>Medio</span>
    <div class="controls">
      <%= f.select :media_id, options_for_select(Media.order('nombre').all.collect{|m| [m.nombre, m.id]}), :class => 'form-control' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Aceptar", :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
