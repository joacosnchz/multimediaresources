

<div class="container-fluid nav-collapse">
  <% if user_signed_in? %>
    <% if current_user.has_role? :admin %>
      <ul class="nav">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('menu.admin') %><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% if false %>
          <li><%= link_to t('menu.countries'), countries_path %></li>
          <li><%= link_to t('menu.states'), states_path %></li>
          <li><%= link_to t('menu.cities'), cities_path %></li>
          <li><hr/></li> <% end %>
          <li><%= link_to t('menu.materials'), materials_path %></li>
          <li><%= link_to t('menu.medias'), media_path %></li>
          <li><%= link_to t('menu.media_types'), media_types_path %></li>
          <li><hr/></li>
          <li><%= link_to "Materiales enviados", "/sent_materials" %></li>
          <li><%= link_to t('menu.users'), users_path %></li>
        </ul>
      </ul>
    <% end %>
    <% if current_user.has_role?(:publisher) or current_user.has_role?(:admin) %>
      <ul class="nav">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('menu.publisher') %><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to t('menu.materials'), materials_path %></li>
          <li><%= link_to t('menu.new_material'), new_material_path %></li>
        </ul>
      </ul>
    <% end %>
    <% if current_user.has_role?(:consumer) or current_user.has_role?(:admin) %>
      <ul class="nav">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('menu.consumer') %><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li><%= link_to t('menu.my_materials'), "/materials/my_materials" %></li>
          <li><hr /></li>
          <li><%= link_to "Archivos", attachments_path  %></li>
          <li><%= link_to "Categorias", categories_path  %></li>
        </ul>
      </ul>
    <% end %>
    
    <ul class="nav pull-right">
      <li class="divider-vertical"></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b>
        <%= image_tag current_user.profile.photo.url(:icon) %>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to "/" do %>
              <span class="glyphicon icon-edit"></span> Inicio
            <% end %>
          </li>
          <li>
            <%= link_to profile_edit_path do %>
              <span class="glyphicon icon-picture"></span> <%= t('menu.profile') %>
            <% end %>
          </li>
          <li><hr/></li>
          <li>
            <%= link_to destroy_user_session_path, :method => :delete do %>
              <span class="glyphicon glyphicon-off"></span> <%= t('menu.logout') %>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  <% else %>  
    <ul class="nav pull-right">
      <li class="divider-vertical"></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('menu.guest') %><b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to new_user_session_path do %>
              <span class="glyphicon  icon-keys"></span> <%= t('menu.login') %>
            <% end %>
          </li>
        </ul>
      </li>
    </ul>
  <% end %>
  
</div><!--/.nav-collapse -->
